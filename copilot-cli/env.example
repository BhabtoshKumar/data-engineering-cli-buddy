# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=codellama:7b
OLLAMA_FALLBACK_MODEL=mistral:7b

# CLI Configuration
COPILOT_LOG_LEVEL=INFO
COPILOT_OUTPUT_FORMAT=rich
COPILOT_CACHE_DIR=~/.copilot/cache

# Data Pipeline Paths
DATA_PIPELINE_PATH=./data_pipeline
EXAMPLES_PATH=./examples

# Feature Flags
ENABLE_SQL_OPTIMIZATION=true
ENABLE_DAG_EXPLANATION=true
ENABLE_DBT_GENERATION=true
ENABLE_SCHEMA_COMPARISON=true

# Development
DEBUG=false
DRY_RUN=false
